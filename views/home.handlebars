<h1>Add a new Workout</h1>
<form method="post">
  <fieldset>
  <label for="workName">Workout Name</label>
  <input type="text" name="workName" id="workName">
  </br>
  <label for="reps">Number of Reps</label>
  <input type="number" name="reps" id="reps">
  </br>
  <label for="weight">Weight used</label>
  <input type="number" name="weight" id="weight">
  </br>
  <label for="date">Date of Workout</label>
  <input type="date" name="date" id="date">
  <label for="lbs">Weight Units</label>
  <input type="radio" name="lbs" value="lbs">
  <input type="radio" name="lbs" value="kgs">
  <input type="submit" name="newWork" id="newWork">
  


<h1>{{results}}</h1>
