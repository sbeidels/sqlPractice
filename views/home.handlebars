<h1>Add a new Workout</h1>



<form>
  <fieldset>
  <label for="workName">Workout Name</label>
  <input type="text" name="workName" id="workName">
  </br>
  
  <label for="reps">Number of Reps</label>
  <input type="number" name="reps" id="reps">
  </br>
  
  <label for="weight">Weight used</label>
  <input type="number" name="weight" id="weight">
  </br>
  
  <label for="date">Date of Workout</label>
  <input type="date" name="date" id="date">
  </br>
  
  <p>Weight Units<p>
  <label for="lbsbutton">Lbs</label>
  <input type="radio" name="lbs" id="lbsbutton" value="lbs">
  <label for="kgsbutton">Kgs</label>
  <input type="radio" name="lbs" id="kgsbutton" value="kgs">
  
  </br>
  <input type="submit" name="newWork" id="newWork">
  
  </fieldset>
</form>
  


<h1>{{results}}</h1>

{{#if results}}
<table>
  <thead>
    <tr>
    <th>Workout Name</th>
	<th>Reps</th>
	<th>Weight</th>
	<th>Date</th>
	<th>Units</th>
	</tr>
  </thead>
  <tbody>
    {{#each results}}
	<tr>
	<td>ID</td>
	<td>{{this.name}}</td>
	<td>{{this.reps}}</td>
	<td>{{this.weight}}</td>
	<td>{{this.date}}</td>
	</tr>
    {{/each}}
  </tbody>
</table>
{{/if}}

